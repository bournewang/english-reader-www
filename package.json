{
  "name": "english-reader",
  "displayName": "English Reader",
  "version": "0.8.70",
  "description": "Enhance english article reading experience with TTS, bilingual mode, and looking up dictionary.",
  "author": "Wang Xiaopei <xiaopei0206@icloud.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build && npm run zip",
    "zip": "cd build/chrome-mv3-prod && zip -r english-reader.zip . && mv english-reader.zip ~/Downloads",
    "build:css": "npx tailwindcss -i tailwind.css -o src/styles/tailwind.css",
    "package": "plasmo package"
  },
  "dependencies": {
    "@headlessui/react": "^2.0.4",
    "@heroicons/react": "^2.1.4",
    "@react-navigation/native": "^6.1.17",
    "@react-navigation/native-stack": "^6.9.26",
    "@tailwindcss/typography": "^0.5.13",
    "plasmo": "0.87.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native-safe-area-context": "^4.10.5",
    "react-native-screens": "^3.32.0",
    "react-router-dom": "latest",
    "tailwindcss": "^3.4.4"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "prettier": "3.2.4",
    "tailwindcss": "latest",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "activeTab",
      "storage"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "styles/overlay.css",
          "styles/tailwind.css",
          "assets/default-site-logo.png",
          "contents/login.html"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
}
