#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="$basedir/../../../../../flaschenpost@1.1.3/node_modules"
else
  export NODE_PATH="$NODE_PATH:$basedir/../../../../../flaschenpost@1.1.3/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../../flaschenpost@1.1.3/node_modules/flaschenpost/dist/bin/flaschenpost-normalize.js" "$@"
else
  exec node  "$basedir/../../../../../flaschenpost@1.1.3/node_modules/flaschenpost/dist/bin/flaschenpost-normalize.js" "$@"
fi
